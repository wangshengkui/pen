<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mylayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/firstcover" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="288dp"
        android:layout_height="438dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" 
       android:background="@drawable/blank0" />

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在缓存离线数据"
            android:layout_above="@+id/progressBar"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialog"
        android:layout_width="247dp"
        android:layout_height="137dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:background="@drawable/rect"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提示"
            android:textSize="14sp"
            android:background="@drawable/bg_tag_title"
            android:gravity="center"/>

        <View
            android:id="@+id/split"
            android:layout_below="@id/textView"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/splitColor" />

        <TextView
            android:id="@+id/textView2"
            android:layout_below="@+id/split"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="sss"
            android:textSize="14sp"
            android:background="@android:color/darker_gray"
            android:gravity="center_horizontal|center_vertical"/>

        <Button
            android:id="@+id/button"
            android:layout_below="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/bg_tag_button"
            android:text="确定"
            android:textSize="14sp"
            android:gravity="center"/>

    </RelativeLayout>


</RelativeLayout>
